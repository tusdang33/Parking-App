<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextWithOutline" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_outline</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="BlackFilledButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/filled_button</item>
    </style>
</resources>